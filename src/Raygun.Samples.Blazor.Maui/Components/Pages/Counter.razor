@page "/counter"
@using Raygun.Blazor
@inject RaygunBlazorClient RaygunBlazorClient

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private async void IncrementCount()
    {
        currentCount++;
        await RaygunBlazorClient.RecordExceptionAsync(new Exception($"Incrementing count: {currentCount}"));
    }
}
